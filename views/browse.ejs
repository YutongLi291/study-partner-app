<%- include('partials/header'); -%>
<span style="font-family:'Courier New';">
<div class="hgrid">
    <div>
        <h2>CPSC 213</h2>
        <h1>Find Your Study Partner</h1>
        <h3>View All Students</h3>
    </div>
    <div style="justify-self: end">
        <button class="button">My Profile</button>
    </div>

    <div class="lgrid">
        <div style="padding:10px;"><input style="border-style:none;" type="text" value="Search Courses"></div>
        <div>
            <p style="padding-left:10px;">Filters<br></p>
            <p style="padding-left:10px;">
                <strong>Other courses taken/taking</strong><br>
                <p style="margin-left:20px;">(Insert checkboxes using javascript)<br>
                [] CPSC 110<br>
                [] CPSC 210<br>
                [] CPSC 221<br>
                </p>
            </p>
            <p style="padding-left:10px;">
                <strong>Degrees</strong><br>
                <p style="padding-left:10px;">
                [] Computer science<br>
                [] Combined computer science and math<br>
                [] Combined computer science and statistics<br>
                [] Combined computer science and physics<br>
                [] Computer engineering<br>
                </p>
            </p>
        </div>
    </div>

    <div class="rgrid">
        <% people.forEach(function(person) { %>
            <div class="prof">
                <div class="grid">
                    <div style="margin-left:50px;margin-top:15px;width:75px;height:75px;border-radius: 50%;background:#ffe7df;"></div>
                    <div>
                        <p style="padding-top:20px;font-size:30px;"><%= person.name %></p>
                        <p>Degree</p>
                    </div>
                </div>
                <div>
                    <p style="margin-left:20px;"><strong>Other courses taken/taking</strong><br>
                    <%= person.courses.sort().join(', ')  %></p>
                    <p style="margin-left:20px;"><strong>Contact me:</strong><br>
                    Email: </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

</span>
<style>
.grid{
    display: grid;
    grid-template-columns: 1fr 1fr;
}
.prof{
    display: grid;
    grid-template-rows: 1fr 1fr;
    grid-template-columns: 1fr;
    background-color: #ffffff;
    padding: 10px;
    background-clip: content-box;
    overflow: scroll;
}
.button{
    background-color: #FFA68A;
    padding: 15px 32px;
    font-family: 'Courier New';
    text-transform: uppercase;
}
input{
    width: 90%;
    padding: 12px;
}
.hgrid{
    display: grid;
    grid-template-columns: 30% 1fr;
    grid-template-rows: 150px 1fr;
}
.lgrid{
    display: grid;
    grid-template-rows: 60px 440px;
    grid-template-columns: 1fr;
    background-color: #FFE7DF;
    padding-right: 20px;
    background-clip: content-box;
}
.lgrid div:nth-child(even) {
    background-color: #FFE7DF;
}
.rgrid{
    display: grid;
    grid-template-rows: 250px 250px;
    grid-template-columns: 1fr 1fr;
    background-color: #ffe7df;
}
h1 {
    font-family: 'Courier New';
    font-size: 25px;
    text-transform: uppercase;
    justify-self: start;
}
h2 {
    text-align: left;
    font-family: 'Courier New';
    text-transform: uppercase;
    font-size: 20px;
}
h3 {
    text-align: left;
    font-family: 'Courier New';
    font-size: 35px;
    font-weight: bold;
    text-transform: uppercase;
    padding-top: 20px;
    padding-bottom: 20px;
}
</style>
<%- include('partials/footer'); -%>