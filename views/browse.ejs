<%- include('partials/header'); -%>
<span style="font-family:'Courier New';">
<div class="hgrid">
    <div>
        <h2>CPSC 213</h2>
        <h1>Find Your Study Partner</h1>
        <h3>View All Students</h3>
    </div>
    <div style="justify-self: end">
        <button class="button">My Profile</button>
    </div>

    <div class="lgrid">
        <div style="padding:10px;"><input style="border-style:none;" type="text" value="Search Courses"></div>
        <div>
            <p>Filters<br></p>
            <p>
                <strong>Other courses taken/taking</strong><br>
                <p class="tab">(Insert checkboxes using javascript)<br>
                [] CPSC 110<br>
                [] CPSC 210<br>
                [] CPSC 221<br>
                </p>
            </p>
            <p>
                <strong>Degrees</strong><br>
                <p class="tab">
                [] Computer science<br>
                [] Combined computer science and math<br>
                [] Combined computer science and statistics<br>
                [] Combined computer science and physics<br>
                [] Computer engineering<br>
                </p>
            </p>
        </div>
    </div>

    <div class="rgrid">
        <% people.forEach(function(person) { %>
            <div>
                <strong><%= person.name %></strong>
                is taking <%= person.courses.sort().join(', ')  %>
            </div>
        <% }); %>
    </div>

</div>

</span>
<style>
.button{
    background-color: #FFA68A;
    padding: 15px 32px;
    font-family: 'Courier New';
    text-transform: uppercase;

}
.tab{
    margin-left: 20px;
}
p{
    padding-left: 20px;
    padding-top: 20px;
}
input{
    width: 90%;
    padding: 12px;
}
.hgrid{
    display: grid;
    grid-template-columns: 30% 1fr;
    grid-template-rows: 150px 300px;
}
.lgrid{
    display: grid;
    grid-template-rows: 60px 450px;
    grid-template-columns: 1fr;
    background-color: #FFE7DF;
}
.lgrid div:nth-child(even) {
    background-color: #FFE7DF;
}
.rgrid{
    display: grid;
    grid-template-rows: 250px 250px;
    grid-template-columns: 450px 450px;
    background-color: #FFF3DF;
}
h1 {
    font-family: 'Courier New';
    font-size: 25px;
    text-transform: uppercase;
    justify-self: start;
}
h2 {
    text-align: left;
    font-family: 'Courier New';
    text-transform: uppercase;
    font-size: 20px;
}
h3 {
    text-align: left;
    font-family: 'Courier New';
    font-size: 35px;
    font-weight: bold;
    text-transform: uppercase;
    padding-top: 20px;
    padding-bottom: 20px;
}
</style>
<%- include('partials/footer'); -%>